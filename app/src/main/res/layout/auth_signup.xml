<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/asuScrvSignUp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:overScrollMode="never">

    <LinearLayout
        android:id="@+id/signUpLn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingBottom="30dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/Fastdroid.TextView.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:text="(*)"
                android:textColor="@drawable/button_danger"
                android:textSize="9sp"
                android:textStyle="italic" />
        </LinearLayout>

        <EditText
            android:id="@+id/asUsername"
            style="@style/Fastdroid.Edittext.Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/username"
            android:inputType="text"
            android:lines="1"
            android:maxLength="64" />

        <TextView
            style="@style/Fastdroid.TextView.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email" />

        <EditText
            android:id="@+id/aaEmail"
            style="@style/Fastdroid.Edittext.Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:lines="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/Fastdroid.TextView.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:text="(*)"
                android:textColor="@drawable/button_danger"
                android:textSize="9sp"
                android:textStyle="italic" />
        </LinearLayout>

        <EditText
            android:id="@+id/aaPhone"
            style="@style/Fastdroid.Edittext.Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/phone"
            android:inputType="phone"
            android:lines="1" />

        <TextView
            style="@style/Fastdroid.TextView.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shipowner"
            android:visibility="gone" />

        <EditText
            android:id="@+id/aaShipOwner"
            style="@style/Fastdroid.Edittext.Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_sm"
            android:layout_marginRight="@dimen/space_sm"
            android:layout_weight="1"
            android:hint="@string/shipowner"
            android:inputType="textPersonName|textAutoComplete|textCapWords"
            android:lines="1"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/Fastdroid.TextView.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/captain" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:text="(*)"
                android:textColor="@drawable/button_danger"
                android:textSize="9sp"
                android:textStyle="italic" />
        </LinearLayout>

        <EditText
            android:id="@+id/aaCaptain"
            style="@style/Fastdroid.Edittext.Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_sm"
            android:layout_marginRight="@dimen/space_sm"
            android:layout_weight="1"
            android:hint="@string/captain"
            android:inputType="textPersonName|textAutoComplete|textCapWords"
            android:lines="1" />

        <TextView
            style="@style/Fastdroid.TextView.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fishinglicense"
            android:visibility="gone" />

        <EditText
            android:id="@+id/aaFishLicense"
            style="@style/Fastdroid.Edittext.Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/fishinglicense"
            android:inputType="textCapCharacters"
            android:lines="1"
            android:textAllCaps="true"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/Fastdroid.TextView.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vesselregistration" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:text="(*)"
                android:textColor="@drawable/button_danger"
                android:textSize="9sp"
                android:textStyle="italic" />
        </LinearLayout>

        <EditText
            android:id="@+id/aaVesselRegistration"
            style="@style/Fastdroid.Edittext.Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/vesselregistration"
            android:inputType="textCapCharacters"
            android:lines="1"
            android:textAllCaps="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/Fastdroid.TextView.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/country" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:text="(*)"
                android:textColor="@drawable/button_danger"
                android:textSize="9sp"
                android:textStyle="italic" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/countrySelector"
            style="@style/Fastdroid.Spinner.Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown" />

        <TextView
            style="@style/Fastdroid.TextView.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/duration"
            android:visibility="gone" />

        <TextView
            android:id="@+id/aaDuration"
            style="@style/Fastdroid.Edittext.Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/duration"
            android:visibility="gone" />

        <TextView
            style="@style/Fastdroid.TextView.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:visibility="gone" />

        <TextView
            android:id="@+id/defaultPasswordShow"
            style="@style/Fastdroid.Edittext.Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:gravity="center"
            android:textColor="@color/fastDroidDangerColor"
            android:textStyle="bold|italic"
            android:visibility="gone" />

        <Button
            android:id="@+id/asuBtnSignUp"
            style="@style/Fastdroid.Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/register" />

        <include layout="@layout/control_line_or" />

        <Button
            android:id="@+id/asuBtnSignIn"
            style="@style/Fastdroid.Button.Primary.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/login" />
    </LinearLayout>
</ScrollView>