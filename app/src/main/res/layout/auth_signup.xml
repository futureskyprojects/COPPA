<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/asuScrvSignUp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingBottom="30dp">


        <TextView
            style="@style/Fastdroid.TextView.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username" />

        <EditText
            style="@style/Fastdroid.Edittext.Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username" />

        <TextView
            style="@style/Fastdroid.TextView.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FullName" />

        <EditText
            style="@style/Fastdroid.Edittext.Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="FullName" />

        <TextView
            style="@style/Fastdroid.TextView.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VessalRegistration" />

        <EditText
            style="@style/Fastdroid.Edittext.Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="VessalRegistration" />

        <TextView
            style="@style/Fastdroid.TextView.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PhoneNumber" />

        <EditText
            style="@style/Fastdroid.Edittext.Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password" />

        <TextView
            style="@style/Fastdroid.TextView.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password" />

        <EditText
            style="@style/Fastdroid.Edittext.Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password" />

        <Button
            android:id="@+id/asuBtnSignUp"
            style="@style/Fastdroid.Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Register" />

        <include layout="@layout/control_line_or" />

        <Button
            android:id="@+id/asuBtnSignIn"
            style="@style/Fastdroid.Button.Primary.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Login" />
    </LinearLayout>
</ScrollView>