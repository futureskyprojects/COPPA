<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Fastdroid" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/fastDroidPrimary</item>
        <item name="colorPrimaryVariant">@color/fastDroidPrimaryDark</item>
        <item name="colorOnPrimary">#F00</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!--        <item name="android:windowBackground">@drawable/bg_window</item>-->
        <item name="android:statusBarColor" tools:targetApi="l">#00000000</item>
        <!-- Customize your theme here. -->
        <item name="titleTextColor">@android:color/white</item>
        <item name="subtitleTextColor">@android:color/white</item>
    </style>

    <style name="Fastdroid.DarkStatusBar" parent="Fastdroid">
        <item name="colorPrimaryVariant">@color/fastDroidPrimaryColor</item>
    </style>

    <style name="Fastdroid.TextView.Label" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#181C32</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="Fastdroid.TextView.Alert.Danger" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/textview_alert_danger</item>
        <item name="android:textColor">@color/fastDroidDangerColor</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="Fastdroid.Edittext.Default" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext_base</item>
        <item name="android:textColor">@color/fastDroidTextColor</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">#9d9d9d</item>
    </style>

    <style name="Fastdroid.Button.Base" parent="Widget.AppCompat.Button">
        <item name="android:stateListAnimator" tools:ignore="NewApi">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="Fastdroid.Button.Primary" parent="Fastdroid.Button.Base">
        <item name="android:background">@drawable/button_primary</item>
    </style>

    <style name="Fastdroid.Button.Primary.Light" parent="Fastdroid.Button.Base">
        <item name="android:background">@drawable/button_primary_light</item>
        <item name="android:textColor">@color/fastDroidPrimaryTextColor</item>
    </style>

    <style name="Fastdroid.Button.Secondary" parent="Fastdroid.Button.Base">
        <item name="android:background">@drawable/button_secondary</item>
        <item name="android:textColor">#3f4254</item>

    </style>

    <style name="Fastdroid.Button.Success" parent="Fastdroid.Button.Base">
        <item name="android:background">@drawable/button_success</item>
    </style>

    <style name="Fastdroid.Button.Success.Gradient" parent="Fastdroid.Button.Base">
        <item name="android:background">@drawable/button_success_gd</item>
    </style>

    <style name="Fastdroid.Button.Danger" parent="Fastdroid.Button.Base">
        <item name="android:background">@drawable/button_danger</item>
    </style>

    <style name="Fastdroid.Button.Danger.Light" parent="Fastdroid.Button.Base">
        <item name="android:background">@drawable/button_danger_light</item>
        <item name="android:textColor">@color/fastDroidDangerColor</item>
    </style>


    <style name="Fastdroid.Button.Warning" parent="Fastdroid.Button.Base">
        <item name="android:background">@drawable/button_warning</item>

    </style>

    <style name="Fastdroid.Button.Warning.Light" parent="Fastdroid.Button.Base">
        <item name="android:background">@drawable/button_warning_light</item>
        <item name="android:textColor">@color/fastDroidWarningColor</item>
    </style>


    <style name="Fastdroid.Button.Info" parent="Fastdroid.Button.Base">
        <item name="android:background">@drawable/button_info</item>


    </style>

    <style name="Fastdroid.Button.Light" parent="Fastdroid.Button.Base">
        <item name="android:background">@drawable/button_light</item>
        <item name="android:textColor">#7e8299</item>

    </style>

    <style name="Fastdroid.Button.Dark" parent="Fastdroid.Button.Base">
        <item name="android:background">@drawable/button_dark</item>
    </style>

    <style name="Fastdroid.Button.Link" parent="Fastdroid.Button.Base">
        <item name="android:background">@drawable/button_link</item>
        <item name="android:textColor">@color/fastDroidPrimaryColor</item>
    </style>

</resources>